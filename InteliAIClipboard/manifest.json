{
    "name": "InteliAI ClipBoard",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Captures copied data and sends it to a Nuxt3 API",
    "host_permissions": [
      "http://localhost:3000/*"
    ],
    "permissions": [
      "tabs",
      "activeTab",
      "contextMenus",
      "storage",
      "contextMenus",
      "activeTab",
      "clipboardWrite",
      "clipboardRead",
      "scripting"
    ],
    "icons": {
      "16": "AI.png",
      "32": "AI.png"
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_scripts": [
        {
          "js": ["contentScript.js"],
          "matches": ["http://*/*", "https://*/*"]
        }
    ]
  }
  